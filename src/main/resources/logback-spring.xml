<configuration>
    <!-- Appender para enviar logs a Fluentd via Socket -->
    <appender name="FLUENTD" class="ch.qos.logback.classic.net.SocketAppender">
        <remoteHost>localhost</remoteHost> <!-- Cambia a 'fluentd' si estÃ¡ en la red de Docker -->
        <port>24224</port>
        <reconnectionDelay>10000</reconnectionDelay>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <!-- Appender para la consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nivel de log y appenders utilizados por defecto -->
    <root level="INFO">
        <appender-ref ref="FLUENTD" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
